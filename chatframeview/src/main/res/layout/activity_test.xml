<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emoji="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.newbiechen.chatframeview.widget.EmojiTextView
        android:id="@+id/test_tv_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        emoji:emojiSize="20sp" />

    <com.newbiechen.chatframeview.widget.EmojiEditText
        android:id="@+id/test_et_send"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/test_btn_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click"/>
</LinearLayout>